<!DOCTYPE html>
<html>
<head>
	<title>BanDroid</title>
	<link rel="stylesheet" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body>
	<div class="container">
      <div class="header clearfix">
        <h3 id='bandroid'>BanDroid</h3>
        <nav>
          <ul class="nav nav-pills pull-right" id="bandroid_layout">
            {{#if user}}
              <li id ="bandroid_navbar" role="presentation"><a href="/">Home</a></li>
              <li id ="bandroid_navbar" role="presentation"><a href="/users/logout">Logout</a></li>
            {{else}}
              <li id ="bandroid_navbar" role="presentation"><a href="/users/login">Login</a></li>
              <li id ="bandroid_navbar" role="presentation"><a href="/users/register">Register</a></li>
            {{/if}}
          </ul>
        </nav>
      </div>


      <div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>

        
      </div>

    </div> <!-- /container -->
</body>
</html>
